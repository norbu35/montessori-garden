---
interface Props {
  title?: string;
  bgColor?: string;
}

const { title, bgColor = "white" } = Astro.props;
---

<section class="container">
  <h1>{title}</h1>
  <slot />
</section>

<style lang="scss" define:vars={{ bgColor }}>
  @import "../styles/vars.scss";

  .container {
    height: 100vh;
    padding: 0 1rem;
    background-color: var(--bgColor);
    background-image: url("../assets/images/bg-paper.png");

    h1 {
      padding: 2rem 0;
      font-size: 2rem;
    }
  }
</style>
