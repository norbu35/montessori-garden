---
interface Props {
  heading?: string;
  bgColor?: string;
}

const { heading, bgColor = "white" } = Astro.props;
---

<section class="container">
  <h1 class="heading">{heading}</h1>
  <slot />
</section>

<style lang="scss" define:vars={{ bgColor }}>
  @import "../styles/vars.scss";

  .container {
    margin: 0 auto;
    padding: 1em;
    background-color: var(--bgColor);
    max-width: $lg;

    @media only screen and (min-width: $md) {
      padding: 4rem;
    }

    @media only screen and (min-width: $lg) {
      font-size: 18px;
    }

    .heading {
      font-family: $font-h1;
      font-size: 2rem;
      margin: 1em 0;

      @media only screen and (min-width: $md) {
        height: 3em;
        display: flex;
        align-items: flex-end;
        background-image: url("../assets/images/bg-heading2.png");
        background-position: center;
        background-size: cover;
        color: white;
        font-size: 2.5em;
        padding-left: 8px;
      }
    }
  }
</style>
